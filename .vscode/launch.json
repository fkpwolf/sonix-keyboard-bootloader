    "version": "0.2.0",
    "configurations": [
        {
            "name": "Cortex Debug",
            "type": "cppdbg",
            "externalConsole": false,
            "cwd": "${workspaceRoot}",
            "program": "${workspaceRoot}/build/jumploader-redragon_k530.bin",
            "request": "launch",
            "servertype": "openocd",
            "debugServerArgs": "-f /home/fan/source/repo/sonix-keyboard-bootloader/6064.cfg",
            "setupCommands": [
                {
                    "text": "-target-select remote localhost:3333",
                    "description": "connect to target",
                    "ignoreFailures": false
                },
                {
                    "text": "-file-exec-and-symbols ${workspaceRoot}/build/jumploader-redragon_k530.bin",
                    "description": "load file",
                    "ignoreFailures": false
                },
                {
                    "text": "-interpreter-exec console \"monitor endian little\"",
                    "ignoreFailures": false
                },
                {
                    "text": "-interpreter-exec console \"monitor reset\"",
                    "ignoreFailures": false
                },
                {
                    "text": "-interpreter-exec console \"monitor halt\"",
                    "ignoreFailures": false
                },
                {
                    "text": "-interpreter-exec console \"monitor arm semihosting enable\"",
                    "ignoreFailures": false
                },
                {
                    "text": "-target-download",
                    "description": "flash target",
                    "ignoreFailures": false
                }
            ],
            "logging": {
                "moduleLoad": true,
                "trace": true,
                "engineLogging": true,
                "programOutput": true,
                "exceptions": true
            },
            "linux": {
                "MIMode": "gdb",
                "MIDebuggerPath": "/usr/bin/gdb",
                "debugServerPath": "openocd",
                "filterStderr":true,
                "filterStdout":false
            },
            "windows": {
                "MIMode": "gdb",
                "MIDebuggerPath": "C:/Users/fkpwo/Downloads/xpack-arm-none-eabi-gcc-10.3.1-2.3/bin/arm-none-eabi-gdb.exe",
                "debugServerPath": "C:/Users/fkpwo/Downloads/openocd-v0.11.0-i686-w64-mingw32/bin/openocd.exe",
                "setupCommands": [
                    {
                        "text": "-environment-cd ${workspaceRoot}\\DISCO_F413ZH\\GCC_ARM\\BUILD"
                    },
                    {
                        "text": "-target-select remote localhost:3333",
                        "description": "connect to target",
                        "ignoreFailures": false
                    },
                    {
                        "text": "-file-exec-and-symbols ${workspaceRootFolderName}/build/jumploader-redragon_k530.bin",
                        "description": "load file",
                        "ignoreFailures": false
                    },
                    {
                        "text": "-interpreter-exec console \"monitor endian little\"",
                        "ignoreFailures": false
                    },
                    {
                        "text": "-interpreter-exec console \"monitor reset\"",
                        "ignoreFailures": false
                    },
                    {
                        "text": "-interpreter-exec console \"monitor halt\"",
                        "ignoreFailures": false
                    },
                    {
                        "text": "-interpreter-exec console \"monitor arm semihosting enable\"",
                        "ignoreFailures": false
                    },
                    {
                        "text": "-target-download",
                        "description": "flash target",
                        "ignoreFailures": false
                    }
                ]
            }
        }
    ]
}